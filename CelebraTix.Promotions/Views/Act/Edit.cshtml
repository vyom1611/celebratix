@model CelebraTix.Promotions.Acts.ActInfo

@{
    ViewData["Title"] = "Edit Act";
}

<h1>Edit</h1>

<h4>Act</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Image">Image</label>
                <input class="form-control" asp-for="Image">
            </div>
            <input type="hidden" asp-for="ImageHash"/>
            <input type="hidden" asp-for="LastModifiedTicks"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        @if (Model.ImageHash != null)
        {
            <img class="act-image" src="@Url.Content($"~/Content/{Uri.EscapeDataString(Model.ImageHash)}")" alt="@Model.Title">
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}